
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Earth</title>
   
    <script src="~/Scripts/Echarts/NewEchart/echarts.min.js"></script>
    <script src="~/Scripts/Echarts/NewEchart/china.js"></script>

        <style>
            body {
                position: absolute;
                width: 100%;
                height: 100%;
                margin: 0;
                font-size: 5px;
            }
        </style>
    </head>
    <body>
        <div id="map-wrap" style="height: 100%;width:100%;">
            <!-- 这里以后是地图 -->
        </div>
        <script>
		// 初始化echarts示例mapChart
        var mapChart = echarts.init(document.getElementById('map-wrap'));

		// mapChart的配置
		var option = {
			tooltip: {
				trigger: 'item',
				formatter: '{b}'
			},
			series: [
				{
					name: '中国',
					type: 'map',
					roam: true,
					mapType: 'china',
					selectedMode : 'multiple',
					label: {
						normal: {
							show: true
						},
						emphasis: {
							show: true
						}
					},
					data:[
						{name:'广东', selected:true}
					]
				}
			]
		};
		mapChart.setOption(option);
        </script>
    </body>
</html>
